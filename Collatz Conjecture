/*Program to implement the algorithm of Collatz conjecture*/

#include <iostream>

using namespace std;

int main()
{

    int n;
    cin>>n;
    int counter=0;



while(n!=1)
    {
     if(n%2==0)
        {
            n=n/2;
        }else
        {
            n=n*3 + 1;
        }

    counter++;
}

cout<<counter;

    return 0;
}

